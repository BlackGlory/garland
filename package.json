{
  "name": "garland",
  "version": "0.1.7",
  "description": "A folder hierarchy builder based on tags and symbolic links",
  "keywords": [],
  "bin": {
    "garland": "dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "repository": "git@github.com:BlackGlory/garland.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "deduplicate": "yarn-deduplicate",
    "prepublishOnly": "run-s clean build bundle",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src",
    "test": "jest --config jest.config.js",
    "test:debug": "cross-env NODE_OPTIONS=--inspect-brk jest --runInBand --config jest.config.js",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts",
    "dev:debug": "cross-env NODE_OPTIONS=--inspect-brk ts-node -r tsconfig-paths/register src/cli.ts",
    "clean": "rimraf lib dist",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "bundle": "webpack --stats-error-details",
    "smoke": "node dist/cli.cjs --help",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean lint build test bundle smoke",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/jest": "^29.2.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "husky": "^4.3.8",
    "jest": "^29.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-shebang-plugin": "^1.1.8",
    "yarn-deduplicate": "^6.0.0"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.1.8",
    "ajv": "^8.11.0",
    "commander": "^9.4.1",
    "extra-filesystem": "^0.4.6",
    "extra-parser": "^0.6.0",
    "extra-sort": "^0.1.1",
    "extra-utils": "^3.3.0",
    "iterable-operator": "^2.3.0",
    "js-yaml": "^4.1.0"
  }
}
