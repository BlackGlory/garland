{
  "name": "garland",
  "version": "0.1.9",
  "description": "A folder hierarchy builder based on tags and symbolic links",
  "keywords": [],
  "type": "module",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16"
  },
  "repository": "git@github.com:BlackGlory/garland.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "prepublishOnly": "run-s prepare clean build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config jest.config.cjs",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage --config jest.config.cjs",
    "test:debug": "cross-env NODE_OPTIONS='--experimental-vm-modules --inspect-brk' jest --runInBand --config jest.config.cjs",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts",
    "dev:debug": "cross-env NODE_OPTIONS=--inspect-brk ts-node -r tsconfig-paths/register src/cli.ts",
    "clean": "rimraf lib dist",
    "build": "tsc --project tsconfig.build.json",
    "smoke": "node lib/cli.js --help",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare clean lint build test smoke",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/jest-resolver": "^0.3.0",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "husky": "^4.3.8",
    "jest": "^29.5.0",
    "jest-resolve": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "return-style": "^3.0.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.8.4",
    "typescript-transform-paths": "^3.4.6",
    "yarn-deduplicate": "^6.0.1"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.3.2",
    "ajv": "^8.12.0",
    "commander": "^10.0.0",
    "extra-filesystem": "^0.5.0",
    "extra-parser": "^0.6.3",
    "extra-sort": "^0.1.1",
    "extra-utils": "^5.1.1",
    "iterable-operator": "^4.0.6",
    "js-yaml": "^4.1.0"
  }
}
